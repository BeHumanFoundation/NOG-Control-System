<% if logged_in? %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= link_to "Novo", new_teacher_path, class: "btn btn-default" %>
    <% @teachers.each do |teacher| %>
      <div class="col-md-12 well">
      <p><%= teacher.name %></p>
      <p>Email:<%= teacher.email %></p>
      <p>Endere√ßo:<%= teacher.address %></p>
      <p>CPF: <%= teacher.cpf %></p>
      <p>Telefone: <%= teacher.phone %> </p>
      <p>Nascimento: <%= teacher.birthday.strftime("%d/%m/%Y") %> </p>
      <p><%= link_to "Editar",edit_teacher_path(teacher), class:"btn btn-default" %>
         <%= link_to "Mostrar mais",teacher_path(teacher), class:"btn btn-default" %>
      </p>
    </div>
    <% end %>
    <%= will_paginate @teachers %>
  </div>
</div>
<% else %>
  <%= render 'layouts/nonLogged' %>
<% end %>
