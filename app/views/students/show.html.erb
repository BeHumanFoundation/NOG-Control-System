<% if logged_in? %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
      <div class="col-md-12 well">
      <p>Nome:<%= @student.name %></p>
      <p>RG: <%= @student.rg %></p>
      <p>Nascimento: <%= @student.birthday.strftime("%d/%m/%Y") %> </p>
      <p>Responsável: <%= link_to @student.responsible.name,responsible_path(@student.responsible) %> </p>
      <p>Telefone 1: <%= @student.phone %> </p>
      <p>Telefone 2: <%= @student.responsible.phone %> </p>
      <p>Endereço: <%= @student.address %> </p>
      <p>Escolaridade: <%= @student.scholarity %> </p>
      <p>Data Criação: <%= @student.created_at.strftime("%d/%m/%Y") %> </p>
      <p>Presença Mensal: </p>
      <p>Matérias: </P>
        <div class="col-lg-12">
          <% @student.subjects.each do |subject| %>
            <p>
              <%= subject.name %>
            </p>
          <% end %>
        </div>
      <p><%= link_to "Editar",edit_student_path(@student), class:"btn btn-default" %>
         <%= link_to "Voltar",students_path, class:"btn btn-default" %>
      </p>
    </div>
  </div>
</div>
<% else %>
  <%= render 'layouts/nonLogged' %>
<% end %>
