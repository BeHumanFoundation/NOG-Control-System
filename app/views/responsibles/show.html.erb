<% if logged_in? %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
      <div class="col-md-12 well">
      <p>Nome:<%= @responsible.name %></p>
      <p>CPF: <%= @responsible.cpf %></p>
      <p>Profissão: <%= @responsible.profession %> </p>
      <p>Nascimento: <%= @responsible.birthday.strftime("%d/%m/%Y") %> </p>
      <p>Telefone: <%= @responsible.phone %> </p>
      <p>Telefone Trabalho: <%= @responsible.phone_job %> </p>
      <p>Endereço: <%= @responsible.address %> </p>
      <p>Data Criação: <%= @responsible.created_at.strftime("%d/%m/%Y") %> </p>
      <p>Responsável por:</p>
      <div class="col-lg-12">
        <% @students.each do |student| %>
          <p><%= link_to student.name , student_path(student) %> </p>
        <% end %>
      </div>
      <p><%= link_to "Editar",edit_responsible_path(@responsible), class:"btn btn-default" %>
         <%= link_to "Voltar",students_path, class:"btn btn-default" %>
      </p>
    </div>
  </div>
</div>
<% else %>
  <%= render 'layouts/nonLogged' %>
<% end %>
